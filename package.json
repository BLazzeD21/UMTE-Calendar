{
	"name": "umte-calendar",
	"version": "1.2.2",
	"description": "UTME Portal Integration with Apple Calendar",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"prettier": "npx prettier . --write",
		"build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
		"dev": "npm run build && node build/index.js",
		"start": "npm run build && pm2 start build/index.js --name UMTE-schedule --time -i max",
		"stop": "pm2 stop UMTE-schedule",
		"reload": "pm2 reload UMTE-schedule",
		"delete": "pm2 delete UMTE-schedule"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BLazzeD21/UMTE-Calendar.git"
	},
	"author": "BLazzeD",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/BLazzeD21/UMTE-Calendar/issues"
	},
	"homepage": "https://github.com/BLazzeD21/UMTE-Calendar#readme",
	"dependencies": {
		"dotenv": "^16.4.7",
		"ical-generator": "^8.1.1",
		"node-ical": "^0.20.1",
		"node-schedule": "^2.1.1",
		"playwright": "^1.50.1",
		"pm2": "^5.4.3",
		"tsc-alias": "^1.8.10"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^22.13.1",
		"@types/node-schedule": "^2.1.7",
		"prettier": "^3.5.0",
		"typescript": "^5.7.3"
	}
}
